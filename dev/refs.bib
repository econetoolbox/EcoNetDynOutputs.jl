@article{albaladejo-robles2023species,
  title = {Species Life-history Strategies Affect Population Responses to Temperature and Land-cover Changes},
  author = {Albaladejo-Robles, Gonzalo and B{\"o}hm, Monika and Newbold, Tim},
  year = {2023},
