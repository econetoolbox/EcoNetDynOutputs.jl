  keywords = {Quantitative Biology - Populations and Evolution},
  file = {/Users/ismael.lajaaiti/Zotero/storage/B48CN65E/Marcus et al. - 2024 - Extinctions as a vestige of instability the geome.pdf;/Users/ismael.lajaaiti/Zotero/storage/HHYYXYWC/2405.html}
